{
    "name": "pillo-monorepo",
    "version": "0.0.1",
    "private": true,
    "description": "Pillo - AI assistant for online meetings (Electron Frontend + FastAPI Backend)",
    "author": "JuanNavarr0",
    "license": "UNLICENSED",
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
      "dev": "npm-run-all --parallel dev:desktop dev:backend",
      "dev:desktop": "npm run dev -w apps/desktop",
      "dev:backend": "python -m uvicorn main:app --app-dir apps/backend --host 127.0.0.1 --port 8000 --reload --reload-dir apps/backend",
      "lint": "echo \"Linting scripts to be defined\"",
      "lint:desktop": "npm run lint -w apps/desktop",
      "lint:backend": "echo \"Backend linting (flake8/ruff) to be defined\"",
      "test": "echo \"Testing scripts to be defined\"",
      "test:desktop": "npm run test -w apps/desktop",
      "test:backend": "echo \"Backend testing (pytest) to be defined\""
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
